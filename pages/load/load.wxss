/* pages/load/load.wxss */
page {
    height: 100%;
}

.imagesize {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.imagesize .imagesize_image {
    width: 600rpx;
    height: 600rpx;
    text-align: center
}

.imagesize.title {
    font-size: 18px;
    font-weight: 600;
    text-align: center;
}

.imagesize.note {
    font-size: 15px;
    font-weight: 500;
    text-align: center;
    color: #333;
}

.team {
    position: fixed;
    bottom: 0;
    font-size: 10px;
    text-align: center;
    margin-left: 150rpx;
    color: rgb(196, 194, 194);
}